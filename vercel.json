{
    "version": 2,
    "builds": [
        {
            "src": "server.js",
            "use": "@vercel/node"
        },
        {
            "src": "public/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/create-room",
            "dest": "server.js"
        },
        {
            "src": "/room/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/socket.io/(.*)",
            "dest": "server.js"
        },
        {
            "src": "/(.*)",
            "dest": "/public/$1"
        },
        {
            "src": "/",
            "dest": "server.js"
        }
    ]
}